<label for="textarea">{{label-text}}</label>
{{textarea
  class=(concat (concat "au-text-input au-text-input--block " 
      (if thin "au-text-input--thin"))
      (if theme (concat "au-text-input--" theme)))
  focus-out=(action "focusOut")
  key-up = (action (mut hasChanged) true)
  value=(mut field)
  maxlength=maxLength
}}
{{#if maxLength}}
  <p class="gray">
    {{sub maxLength (if field (get field "length") 0)}} characters remaining
  </p>
{{/if}}
{{#if (and (or showError hasChanged) invalid)}}
  {{dds/validation-error type="error" message=errorMessage float="left"}}
{{else if (and apiError (not hasChanged))}}
  {{dds/validation-error type="warning" message=apiError float="left"}}
{{/if}}
