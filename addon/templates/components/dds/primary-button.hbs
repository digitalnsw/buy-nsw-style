{{#if route}}
  {{link-to label route
    class=(concat (concat (concat "au-btn " 
        (if wide "au-btn--wide "))
        (if thin "au-btn--thin "))
        (if theme (concat "au-btn--" theme)))
    disabled=disabled
  }}
{{else}}
  <a
    class={{concat (concat (concat (concat "au-btn "
        (if wide "au-btn--wide "))
        (if thin "au-btn--thin "))
        (if theme (concat "au-btn--" theme)))
    }}
    onclick={{unless disabled onClick}}
    disabled={{disabled}}
  >
    {{label}}
  </a>
{{/if}}
