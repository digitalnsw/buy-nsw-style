<div class="container-fluid">
  <div class="au-main-nav__menu" id="top">
    <div class="au-main-nav__menu-inner">
      <div class="au-main-nav__focus-trap-top"></div>
      <ul class="au-link-list" id="mainmenu">
        {{#each items as |item|}}
          <li class={{if (eq auth.currentRouteName item.route) "active"}}>
            {{ link-to item.label item.route item.param }}
          </li>
        {{/each}}
        {{# if auth.isAdmin }}
          <li><a href="/ops">Admin</a></li>
        {{/ if }}
      </ul>
      <div class="au-main-nav__focus-trap-bottom"></div>
    </div>
  </div>
</div>
