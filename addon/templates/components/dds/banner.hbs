<div class="au-banner {{if light "au-banner--light"}} {{background}}">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-36">
        <div class="au-banner__text">
          {{#if links}}
            {{dds/bread-crumbs links=links}}
          {{/if}}
          <h3 class="au-banner__title">{{title}}</h3>
          {{#if heading}}
            <br>
            <h4 class="au-banner__heading">{{heading}}</h4>
          {{/if}}
          <div class="au-banner__subline">{{subline}}</div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-34">
        {{yield}}
      </div>
    </div>
  </div>
</div>
