<div class={{if light "au-banner au-banner--light" "au-banner"}}>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-36">
        <div class="au-banner__text">
          <h3 class="au-banner__title">{{title}}</h3>
          {{#if heading}}
            <br>
            <h4 class="au-banner__heading">{{heading}}</h4>
          {{/if}}
          <div class="au-banner__subline">{{subline}}</div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-34">
        {{yield}}
      </div>
    </div>
  </div>
</div>
